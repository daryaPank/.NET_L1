@model BusinessInterop.Data.LendingDto

@{
    ViewData["Title"] ="Выдача";
}

<br />

<h2>Выдача</h2>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@(Model is null ? 0 : Model.Id)" name="Id" />

            <div class="form-group">
                <label asp-for="ExampleId" class="control-label">Книга</label>

                <select asp-antiforgery="true" data-live-search="true" autocomplete="true" asp-for="ExampleId" class="form-control" asp-items="ViewBag.ExampleIds">
                    <option selected="selected" value=""></option>
                </select>

                <span asp-validation-for="ExampleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReaderId" class="control-label">Читатель</label>

                <select asp-antiforgery="true" data-live-search="true" autocomplete="true" asp-for="ReaderId" class="form-control" asp-items="ViewBag.ReaderIds">
                    <option selected="selected" value=""></option>
                </select>

                <span asp-validation-for="ReaderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Start" class="control-label">Дата выдачи</label>

                <input asp-for="Start" class="form-control" maxlength="100" />

                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="End" class="control-label">Дата возврата</label>

                <input asp-for="End" class="form-control" maxlength="100"  />

                <span asp-validation-for="End" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LibrarianId" class="control-label">Библиотекарь</label>

                <select asp-antiforgery="true" data-live-search="true" autocomplete="true" asp-for="LibrarianId" class="form-control" asp-items="ViewBag.LibrarianIds">
                    <option selected="selected" value=""></option>
                </select>

                <span asp-validation-for="LibrarianId" class="text-danger"></span>
            </div>
            <div class="form-group" align="center">
                <div class="btn-group">
                    <input type="submit" value="Сохранить" class="btn btn-outline-success" />

                    <a class="btn btn-outline-danger" asp-action="Index">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}