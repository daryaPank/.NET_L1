@model BusinessInterop.Data.ReaderDto

@{
    ViewData["Title"] = (Model is null || Model.Id == 0 ? "Добавление" : "Редактирование") + " читателя";
}

<br />

<h2>Читатель</h2>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@(Model is null ? 0 : Model.Id)" name="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">ФИО</label>

                <input asp-for="Name" class="form-control" maxlength="100" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Телефон</label>

                <input asp-for="Phone" class="form-control" maxlength="100" type="number" step="any" />

                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Адрес</label>

                <input asp-for="Address" class="form-control" maxlength="100" />

                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group" align="right">
                <div class="btn-group">
                    <input type="submit" value="Сохранить" class="btn btn-outline-success" />

                    <a class="btn btn-outline-danger" asp-action="Index">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}