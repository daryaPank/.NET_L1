@model BusinessInterop.Data.LibrarianDto

@{
    ViewData["Title"] ="Библиотекарь";
}

<br />

<h2>Библиотекарь</h2>


<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@(Model is null ? 0 : Model.Id)" name="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">ФИО</label>

                <input asp-for="Name" class="form-control" maxlength="100" />

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group" align="center">
                <div class="btn-group">
                    <input type="submit" value="Сохранить" class="btn btn-outline-success" />

                    <a class="btn btn-outline-danger" asp-action="Index">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}